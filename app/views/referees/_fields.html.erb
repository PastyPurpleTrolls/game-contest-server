<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :name %>:
    </div>
    <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :rules_url, 'Rules URL:' %>
    </div>
    <%= f.text_field :rules_url, class: 'form-control' %>
</div>

<br>

<div class="form-group row left" data-toggle="tooltip" data-placement="bottom" title="Single file containing the logic for the referee">
    <%= f.label :upload, 'Referee File:', class: 'col-xs-4' %>
    <%= f.file_field :upload %>
</div>

<div class="form-group row left" data-toggle="tooltip" data-placement="bottom" title="Compressed file containing any required assets for players">
    <%= f.label :upload2, 'Player-Include Files:', class: 'col-xs-4 xs-font' %>
    <%= f.file_field :upload2 %>
</div>

<div class="form-group row left" data-toggle="tooltip" data-placement="bottom" title="Compressed file containing script.js and any required assets">
    <%= f.label :upload3, 'Replay Plugin:', class: 'col-xs-4' %>
    <%= f.file_field :upload3 %>
</div>

<div class="form-group row left" data-toggle="tooltip" data-placement="bottom" title="Test Player file or a zip containing a makefile">
    <%= f.label :upload4, 'Test Player:', class: 'col-xs-4' %>
    <%= f.file_field :upload4 %>
</div>

<br>

<div class="form-group row left">
    <div class="col-xs-4 no-right-padding">
        <%= f.label :round_limit, "Round Limit (Inclusive):", class: 'xs-font' %>
    </div>
    <div class="col-xs-2 no-left-padding">    
        <%= f.text_field :round_limit, class: 'form-input small-box', :value=>'100' %>
    </div>
    <div class="col-xs-4">
        <%= f.label :players_per_game, 'Players per Game:' %>
    </div>
    <div class="col-xs-2">  
        <%= f.select :players_per_game, 1..10, {}, class: 'form-input form-element' %>
    </div>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :time_per_game, 'Time per Game (s):' %>
    </div>
    <%= f.text_field :time_per_game, class: 'form-control' %>
</div>

<div class="form-group row left">
    <div class="col-xs-12">
        <%= f.label :rounds_capable, 'Referee capable of handling rounds:' %>
        <%= f.check_box :rounds_capable, :checked_value => true, :unchecked_value => false, class: 'form-checkbox form-element' %>
    </div>
</div>

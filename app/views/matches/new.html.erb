<% setTitle("Challenge Match") %>
<br>
<ol class="breadcrumb">
    <li><a href="<%= root_path %>">Home</a></li>
    <% if params[:contest_id] != 'not-specified' %>
        <li><a href="<%= contests_path %>">Contests</a></li>
        <li><a href="<%= contest_path(@contest) %>"><%= @contest.name %></a></li>
    <% end %>
    <li class="active">Challenge Match</li>
</ol>
<div class="row">
    <div class="container center display-container col-md-offset-3 col-md-6">
        <h1 class="headings new-heading row left">Challenge Information</h1>
        <div class="row left">
            <p class="col-xs-4">Selected Contest:</p>
            <%= form_tag(new_contest_match_path(:contest_id), method: :get, class: "form-input", id: "contest-form") do %>
                <%= collection_select(:match, :manager_id, @contests, :id, :name, {prompt: "Select a Contest"}, class: "form-element", id: "contest-selector", onchange: "redirectToContest()") %>
            <% end %>
        </div>
        <% if @match %>
            <%= form_for [@match.manager, @match] do |f| %>
                <%= render 'shared/error_messages', object: @match %>
                <%= render 'fields', f: f %>
                <%= f.submit 'Challenge!', class: 'btn btn-warning' %>
            <% end %>
        <% end %>
    </div>
</div>

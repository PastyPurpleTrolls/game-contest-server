<%= render 'shared/error_messages', object: @user %>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :username %>:
    </div>
    <%= f.text_field :username, class: 'form-input col-xs-8' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :email %>:
    </div>
    <%= f.text_field :email, class: 'form-input col-xs-8' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :password %>:
    </div>
    <%= f.password_field :password, class: 'form-input col-xs-8' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :password_confirmation, 'Confirmation' %>:
    </div>
    <%= f.password_field :password_confirmation, class: 'form-input col-xs-8' %>
</div>

<% if current_user && current_user.admin? %>
    <div class="form-group row">
        <div class="col-xs-6">
            <%= f.label :contest_creator, 'Contest Creator:' %>
            <%= f.check_box :contest_creator, :checked_value => true, :unchecked_value => false, class: 'form-checkbox form-element'%>
        </div>
        <div class="col-xs-6">
            <%= f.label :admin, 'Admin:' %>
            <%= f.check_box :admin, :checked_value => true, :unchecked_value => false, class: 'form-checkbox form-element' %>
        </div>
    </div>
<% end %>

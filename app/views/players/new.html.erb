<div class="row">
    <div class="container center display-container col-md-offset-3 col-md-6">
        <h1 class="headings new-heading col-xs-10 left">Player Information</h1>
        <div class="row left">
            <p class="col-xs-4">Selected Contest:</p>
            <%= form_tag(new_contest_player_path(:contest_id), method: :get, class: "form-input", id: "contest-form") do %>
                <%= collection_select(:player, :contest_id, @contests, :id, :name, {prompt: "Select a Contest"}, class: "form-element", id: "contest-selector", onchange: "redirectToContest()") %>
            <% end %>
        </div>
        <% if @player %>
            <%= form_for [@player.contest, @player] do |f| %>
                <%= render 'shared/error_messages', object: @player %>
                <%= render 'fields', f: f %>
                <%= f.submit 'Create Player', class: 'btn btn-warning' %>
            <% end %>
        <% end %>
    </div>
</div>

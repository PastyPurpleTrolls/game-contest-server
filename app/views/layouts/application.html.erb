<!DOCTYPE html>
<html>
    <head>
        <title>Aires | Taylor University Game Contest Server</title>
        <%= favicon_link_tag       "favicon.ico" %>
        <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
        <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Merriweather'%>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= yield :javascript_includes %>
        <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <% if content_for?(:refresh_rate) %>
            <meta http-equiv="refresh" content="<%= yield :refresh_rate %>">
        <% end %>
    </head>
    <body>

        <!-- Renders the navbar partial -->
        <%= render "layouts/navbar" %>

<!--    Adds alerts and buttons of all
        types to show colors
-->     <!--
        <%#= render "layouts/test_colors" %>
        -->

        <% flash.each do |level, message| %>
            <div class="alert alert-<%= level %>"><%= message %></div>
        <% end %>

        <div class="container">
            <%= yield %>
        </div>

    </body>
    <footer>
    <% if current_user&.admin %>
      <div class="right system-status">
            System Status: 
            <% if @daemon_status then %>
                <span class="glyphicon glyphicon-ok system-check" aria-hidden="true"></span>
            <% else %>
                <span class="glyphicon glyphicon-remove system-x" aria-hidden="true"></span>
            <% end %>
        </div>
    <% end %>
    </footer>
</html>

<% setTitle("Add Tournament") %>
<div class="row">
    <div class="container center display-container col-md-offset-3 col-md-6">
        <h2 class="headings new-heading row left">New Tournament Information</h2>
        <div class="row left">
            <p class="col-xs-4">Selected Contest:</p>
            <%= form_tag(new_contest_tournament_path(:contest_id), method: :get, class: "form-input", id: "contest-form") do %>
                <%= collection_select(:tournament, :contest_id, @contests, :id, :name, {prompt: "Select a Contest"}, class: "form-element", onchange: "redirectToContest()") %>
            <% end %>
        </div>
        <% if @tournament %>
            <%= form_for [@tournament.contest, @tournament] do |f| %>
                <%= render 'shared/error_messages', object: @tournament %>
                <%= render "fields", f:f %>
                <%= f.submit "Create Tournament", class: 'btn btn-warning' %>
            <% end %>
        <% end %>
    </div>            
</div>


<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :name %>:
    </div>
    <%= f.text_field :name, class: 'form-input col-xs-8' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :description %>:
    </div>
    <%= f.text_area :description, class: 'form-input col-xs-8' %>
</div>

<div class="form-group row left">
    <%= f.label :upload, 'Upload file:', class: 'col-xs-4' %>
    <%= f.file_field :upload %>
</div>
<div class="form-group row left">
    <div class="col-xs-12">
        <%= f.label :playable, 'Allow others to compete against this player:' %>
        <%= f.check_box :playable, class: 'form-checkbox form-element'%>
    </div>
</div>

<div class="form-group row left">
    <div class="col-xs-12">
        <%= f.label :downloadable, 'Allow others to download this player:' %>
        <%= f.check_box :downloadable, class: 'form-checkbox form-element' %>
    </div>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :name, 'Name:' %>
    </div>
    <%= f.text_field :name, class: 'form-input col-xs-7' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :description, 'Description:' %>
    </div>
    <%= f.text_area :description, class: 'form-input col-xs-7' %>
</div>


<div class="form-group row left">
    <div class="col-xs-4">
        <%= f.label :deadline, "Deadline:" %>
    </div>
    <% Time.use_zone("America/Indianapolis") do %>
        <%= f.datetime_select :deadline, { start_year: Time.now.year, use_short_month: true, minute_step: 5, order: [:month, :day, :year],  datetime_separator: " @ " }, class: 'form-input form-element' %>
    <% end %>
</div>
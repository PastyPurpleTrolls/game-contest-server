<% setTitle("Login") %>
<div class="row">
    <div class="container center display-container col-md-offset-3 col-md-6">
        <h1 class="headings new-heading col-xs-10 col-xs-offset-1 left">Login</h1>
        <%= form_tag sessions_path do %>
            <div class="form-group row left">
                <div class="col-xs-4">
                    <%= label_tag :username %>:
                </div>
                <%= text_field_tag :username, params[:username], class: 'form-control' %>
            </div>

            <div class="form-group row left">
                <div class="col-xs-4">
                    <%= label_tag :password %>:
                </div>
                <%= password_field_tag :password, params[:password], class: 'form-control' %>
            </div>

            <%= submit_tag 'Log In', class: 'btn btn-danger' %>
        <% end %>
    </div>    
</div>

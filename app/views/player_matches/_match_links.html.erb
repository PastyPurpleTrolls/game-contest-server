<% if !player_match.nil? %>
	<% @tmp = [] %>
	<% player_match.match.players.each do |p|%>
		<% @tmp << p.name %>
	<% end %>

	<%= button_to(match_path(player_match.match), method: :get, class: 'results-container') do %>
		<%= @tmp.to_sentence %>
		<% if player_match.result.nil? %>
			(Waiting)
		<% else %>
			(<%= player_match.result %>)
		<% end %>
	<% end %>

<% end %>


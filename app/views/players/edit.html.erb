<% setTitle("Edit Player") %>
<br>
<ol class="breadcrumb">
    <li><a href="<%= root_path %>">Home</a></li>
    <li><a href="<%= contests_path %>">Contests</a></li>
    <li><a href="<%= contest_path(@player.contest) %>"><%= @player.contest.name %></a></li>
    <li><a href="<%= player_path(@player) %>"><%= @player.name %></a></li>
    <li class="active">Edit Player</li>
</ol>
<div class="row">
    <div class="center display-container col-md-offset-2 col-lg-offset-3 col-md-8 col-lg-6">
        <h1 class="headings new-heading row left">Edit Player</h1>
        <%= form_for @player do |f| %>
            <%= render 'shared/error_messages', object: @player %>
            <div class="form-group row left">
                <div class="col-xs-4">Contest:</div>
                <div class="col-xs-8 info-link"><%= @player.contest.name %></div>
            </div>
            <%= render 'fields', f: f %>
            <%= f.submit 'Update Player', class: 'btn btn-danger' %>
        <% end %>
    </div>
</div>
<br>
<ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li class="active">Help</li>
</ol>

<div class="row">
    <div class="col-md-6">
        <div class="display-container">
            <h1>General</h1>
            <div class="info-container center"><%= link_to 'Terminology', help_terminology_path %></div>
        </div>
    </div>

    <% if current_user.admin %>
        <div class="col-md-6">
            <div class="display-container">
                <h1>Administrator Role</h1>
                <div class="info-container center"><%= link_to 'Deleting Users', '#' %></div>
                <div class="info-container center"><%= link_to 'Changing User Roles', '#' %></div>
                <div class="info-container center"><%= link_to 'Entity Relationship Diagram (ERD)', help_erd_path %></div>
                <div class="info-container center"><%= link_to 'Manually Running a Match', '#' %></div>
            </div>
        </div>
    <% end %>

    <% if current_user.contest_creator %>
        <div class="col-md-6">
            <div class="display-container">
                <h1>Contest Creator Role</h1>
                <div class="info-container center"><%= link_to 'Create, Modify, or Delete Referees', '#' %></div>
                <div class="info-container center"><%= link_to 'Create, Modify, or Delete Contests', '#' %></div>
                <div class="info-container center"><%= link_to 'Create, Modify, or Delete Tournaments', '#' %></div>
            </div>
        </div>
    <% end %>

    <div class="col-md-6">
        <div class="display-container">
            <h1>Student Role</h1>
            <div class="info-container center"><%= link_to 'Upload Players to a Contest', '#' %></div>
            <div class="info-container center"><%= link_to 'Challenge Other Players', '#' %></div>
            <div class="info-container center"><%= link_to 'View Tournament and Challenge Match Results', '#' %></div>
        </div>
    </div>
</div>
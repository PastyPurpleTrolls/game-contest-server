<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">
        <%= f.label :name %>:
    </div>
    <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">Start:</div>
    <%= @tournament.start.strftime("%b %-d %Y @ %H:%M") %>
</div>
<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">Tournament Type:</div>
    <%= @tournament.tournament_type.split.map(&:capitalize).join(' ') %>
</div>
<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">Rounds Per Match:</div>
    <%= @tournament.rounds_per_match %>
</div>
<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">
        <%= f.label :name %>:
    </div>
    <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">
        <%= f.label :description %>:
    </div>
    <%= f.text_area :description, class: 'form-control' %>
</div>

<div class="form-group row left" data-toggle="tooltip" data-placement="bottom" title="Single file containing the logic for this player">
    <%= f.label :upload, 'Player File:', class: 'col-xs-4 text-right padding-right-25' %>
    <%= f.file_field :upload %>
</div>

<div class="form-group row left">
    <div class="col-xs-4 text-right padding-right-25">
        <%= f.label :playable, 'Allow others to compete against this player:' %>
    </div>
    <%= f.check_box :playable, class: 'form-checkbox form-element' %>
</div>

<div class="form-group row xs-font">
    <div>Note: creating this player will automatically create a match that tests this player against itself</div>
</div>

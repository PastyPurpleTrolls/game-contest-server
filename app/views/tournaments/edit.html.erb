<% setTitle("Edit Tournament") %>
<br>
<ol class="breadcrumb">
    <li><a href="<%= root_path %>">Home</a></li>
    <li><a href="<%= contests_path %>">Contests</a></li>
    <li><a href="<%= contest_path(@tournament.contest) %>"><%= @tournament.contest.name %></a></li>
    <li><a href="<%= tournament_path(@tournament) %>"><%= @tournament.name %></a></li>
    <li class="active">Edit</li>
</ol>
<div class="row">
    <div class="center display-container col-md-offset-2 col-lg-offset-3 col-md-8 col-lg-6">
        <h1 class="headings new-heading row left">Edit Tournament</h1>
        <%= form_for @tournament do |f| %>
            <%= render 'shared/error_messages', object: @tournament %>
            <div class="form-group row left">
                <div class="col-xs-4 text-right padding-right-25">Contest:</div>
                <div class="col-xs-8 info-link"><%= @tournament.contest.name %></div>
            </div>
            <%= render 'fields', f: f %>
            <%= f.submit "Update Tournament", class: 'btn btn-danger' %>
        <% end %>
    </div>            
</div>
